model Company {
  id                 Int     @id @default(autoincrement())
  name               String?
  website            String?
  Addresses          Address[]
  Contacts           User[]
}


model Basket {
  id                 Int     @id @default(autoincrement())
  name               String?
  price              Int?
  subscriptionType   String?
  Products           Product[]
}

// - TODO: Modifier le nom des types dans l'enum
enum TypeSubscription {
  TEST1
  TEST2
}

model Subscription {
  id                 Int     @id @default(autoincrement())
  type               TypeSubscription?
  price              Int?
  duration           Int?
}

